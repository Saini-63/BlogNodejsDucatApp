{{>header}}
<div class="container">
    <div class="row">
        {{#each blogs}}
        <div class="col-sm-3 mt-4">
            <div class="card">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{sliceString this.description}}</p>
                    <a href="/detail/{{this._id}}" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{>footer}}